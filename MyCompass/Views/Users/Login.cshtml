@model MyCompass.Models.User

@{
    ViewData["Title"] = "Login";
    Layout = "_LoginLayout";
}

<link rel="stylesheet" href="~/css/LoginOrRegister.css" />

<div class="row">
    <div class="form">
        <form asp-action="Login" class="login-form">
            <h2 class="text-center">Login To Continue</h2><br />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <input asp-for="Username" class="form-control" type="text" placeholder="username" required />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Password" class="form-control" type="password" placeholder="password" required />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Sign In" />
            </div>

            @if (!String.IsNullOrEmpty(ViewBag.Error))
            {
                <div class="text-danger">@ViewBag.Error</div>
            }

            <div>
                Not registered? <a asp-action="Register">Click Here</a> to register.
            </div>
        </form>

    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
