@model IEnumerable<MyCompass.Models.Place>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <br />
    <h2>Welcome to My Compass Website</h2>

    @{
        <div class="row increaseRowWidth">
            @foreach (var item in Model)
            {
                <div class="col-2 mt-5 card" style="width: 14rem; margin-right: 7rem">
                    @if (item.PlaceImage != null)
                    {
                        string img = Convert.ToBase64String(item.PlaceImage.Image);
                        <img class="card-img-top" src="data:image/png;base64,@img" />
                    }
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                    </div>
                    <ul class="list-group list-group-flush">
                        @{
                            @foreach (var eventItem in item.TripEvents)
                            {
                                <li class="list-group-item">
                                    <a asp-action="Details" asp-route-id="@eventItem.Id" asp-controller="TripEvents">@eventItem.Title</a>
                                    <br />
                                    <div>@eventItem.Date</div>
                                </li>
                            }
                        }
                    </ul>
                </div>
            }
        </div>
    }
</div>
