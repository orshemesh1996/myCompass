@model MyCompass.Models.TripEvent

@{
    ViewData["Title"] = "Details";
}

@section scripts {

    <script type="text/javascript">
        initCordinates(@Model.Place.Latitude, @Model.Place.Longitude);
        $(document).ready(function () {
            getTemperature(@Model.Place.Latitude, @Model.Place.Longitude);
        });
    </script>

}

<div>
    <h4>Trip Event Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Duration)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Duration)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Notes)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Notes)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Place)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Place.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Categories)
        </dt>
        <dd class="col-sm-10">
            @foreach (var category in Model.Categories)
            {
                <div>@category.Name</div>
            }
        </dd>
        <dt class="col-sm-2">
            Weather
        </dt>
        <dd id="weather" class="col-sm-10">

        </dd>
        <dt class="col-sm-2">
            Map
        </dt>
        <dd id="map" style="height: 300px; width: 300px" class="col-sm-7">
            
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
