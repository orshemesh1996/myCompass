@model MyCompass.Models.PlaceImage

@{
    ViewData["Title"] = "Details";
}

<div>
    <h4>Place Image Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ImageFile)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Image != null)
            {
                string img = Convert.ToBase64String(Model.Image);
                <img src="data:image/png;base64,@img" width="50" height="50" />
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Place)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Place.Name)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
